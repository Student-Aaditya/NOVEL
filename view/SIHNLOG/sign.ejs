<% layout("/INCLUDE/boilerplate")%>
<style>
    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    /* Desktop Styles */
    @media screen and (min-width: 900px) {
        body {
            background-color: rgb(171, 161, 161);
        }

        .body {
            width: 75%;
            height: 38rem;
            border: 2px solid white;
            margin: 2rem auto;
            border-radius: 2rem;
        }

        #body {
            display: flex;
            justify-content: space-around;
            align-items: center;
            height: 100%;
        }

        .log-body img {
            width: 30rem;
            height: 35rem;
            border-radius: 2rem;
        }

        #log-data {
            border: 2px solid black;
            width: 30rem;
            height: 32rem;
            border-radius: 2rem;
            background-color: white;
            padding: 1rem;
        }

        .log-data {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            padding: 1rem;
        }

        .label {
            font-size: 1.3rem;
        }

        .input {
            font-size: 1.1rem;
            background-color: white;
            color: black;
            border-radius: 1rem;
            padding: 0.5rem 1rem;
            width: 90%;
            border: 1px solid gray;
        }

        .btn {
            text-align: center;
            margin-top: 1rem;
        }

        .btn button {
            font-size: 1.4rem;
            background-color: aqua;
            color: white;
            border-radius: 1rem;
            padding: 0.5rem 2rem;
            border: none;
            cursor: pointer;
        }

        .span {
            font-size: 2rem;
            text-align: center;
            display: block;
        }

        .facebook {
            text-align: center;
            margin-top: 1rem;
        }

        .facebook button {
            background-color: blue;
            color: white;
            font-size: 1.2rem;
            padding: 0.5rem 2rem;
            border-radius: 1rem;
            border: none;
            cursor: pointer;
        }
    }

    /* Mobile Styles */
    @media screen and (max-width: 600px) {
        body {
            background-color: rgb(194, 202, 191);
        }

        .body {
            border: 2px solid black;
            margin: 2rem auto;
            border-radius: 1rem;
            max-width: 90%;
            background-color: white;
        }

        #body {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 1rem;
        }

        .log-body img {
            width: 90%;
            height: auto;
            border-radius: 1rem;
            margin-bottom: 1rem;
        }

        #log-data {
            width: 90%;
            border: 1px solid black;
            border-radius: 1rem;
            background-color: white;
            padding: 1rem;
        }

        .log-data {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .label {
            font-size: 1.2rem;
        }

        .input {
            width: 100%;
            padding: 0.4rem;
            font-size: 1rem;
            border-radius: 0.5rem;
            border: 1px solid gray;
        }

        .btn {
            text-align: center;
        }

        .btn button {
            width: 6rem;
            height: 2rem;
            background-color: black;
            color: white;
            border-radius: 1rem;
            border: none;
        }

        .span {
            font-size: 1.4rem;
            text-align: center;
        }

        .facebook {
            text-align: center;
        }

        .facebook button {
            background-color: blue;
            color: white;
            font-size: 1rem;
            padding: 0.5rem 1.2rem;
            border-radius: 0.8rem;
            border: none;
            cursor: pointer;
        }
    }
</style>

<body>
    <div class="body">
        <div id="body">
            <div class="log-body">
                <img src="novel.jpg" alt="error due to network issue">
            </div>
            <div id="log-data">
                <form action="/sign" method="POST">
                    <div class="log-data">
                        <label for="username" class="label">NAME:</label>
                        <input type="text" placeholder="username" class="input" name="username" required>

                        <label for="email" class="label">EMAIL:</label>
                        <input type="email" placeholder="email-id" class="input" name="email" required>

                        <label for="password" class="label">PASSWORD:</label>
                        <input type="password" placeholder="enter the Password" class="input" name="password" required>

                        <div class="btn">
                            <button type="submit">Sign-Up</button>
                        </div>


                       
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
