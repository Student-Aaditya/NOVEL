<% layout("/INCLUDE/boilerplate")%>
<style>
    @media screen and (min-width:900px) {
        body {
            /* background-image: url("b2.jpg"); */
            background-color: rgb(171, 161, 161);
        }

        .body {
            width: 75%;
            height: 37rem;
            border: 2px solid white;
            margin: 2rem 0 0 8rem;
            border-radius: 2rem;
        }
        #body{
            display: flex;
            margin: 1rem 0 0 0;
        }
        .log-body img {
            width: 30rem;
            height: 35rem;
            margin: 0 0 0 4rem;
            border-radius: 2rem;
        }

        #log-data {
            border: 2px solid black;
            width: 30rem;
            height: 32rem;
            margin: 2rem 0 0 3rem;
            border-radius: 2rem;
        }

        .log-data {
            width: 28rem;
            height: 24rem;
            margin: 3rem 0 0 1rem;
            /* border: 3px solid black; */
            border-radius: 2rem;
        }

        .label {
            margin: 0 0 0 1rem;
            font-size: 1.3rem;
        }

        .input {
            margin: 2rem 0 0 1rem;
            font-size: 1.1rem;
            background-color: white;
            color: black;
            border-radius: 1rem;
            width: 16rem;
            padding: 0 0 0 1rem;
        }

        #input {
            margin: 2rem 0 0 4rem;
        }
        #email {
            margin: 2rem 0 0 4rem;
        }

        .btn {
            /* border: 2px solid black; */
            width: 32%;
            margin: 2rem 0 0 8rem;

        }

        .btn a button {
            font-size: 1.4rem;
            margin: 1rem 0 0 1rem;
            background-color: aqua;
            color: white;
            border-radius: 1rem;
        }

        .span {
            font-size: 2.6rem;
            margin: 0 0 0 10rem;
            padding: 0 0 0 1.5rem;
        }

        .facebook a button {
            background-color: blue;
            color: white;
            margin: 0rem 0 0 9rem;
            font-size: 1.8rem;
        }


    }

    @media screen and (max-width:600px) {
        body {
            background-color: rgb(194, 202, 191);
        }

        .body {
            /* background-color: rgb(184, 108, 61); */
            border: 2px solid black;
            max-width: 28rem;
            height: 42rem;
            margin: 2rem 0 0 1.5rem;
            /* display: inline-block; */
        }

        .log-body {
            /* border: 2px solid red; */
            height: 18rem;
        }

        .log-body img {
            height: 19rem;
            max-width: 18rem;
            margin: 1rem 0 0 3rem;
        }

        #log-data {
            margin: 5rem 0 0 3.5rem;
            height: 18rem;
        }

        .log-data {
            margin: 0 1rem 0 0;
            display: grid;
        }

        .btn {
            margin: 2rem 0 0 3rem;


        }

        .btn button {
            width: 5.5rem;
            height: 1.8rem;
            background-color: black;
            color: white;
            cursor: pointer;
            border-radius: 1rem;
        }

        .log-data label {
            font-size: 1.3rem;
        }

        .log-data input {
            width: 14rem;
            height: 1.3rem;
        }
    }
</style>

<body>
    <div class="body">
        <div id="body">
            <div class="log-body">
                <img src="novel.jpg" alt="error due to network issue">
            </div>
            <div id="log-data">
                <form action="/sign" method="POST">
                    <div class="log-data">
                        <label for="username" class="label">NAME: </label>
                        <input placeholder="username" class="input" id="input" name="username" required>
                        <br>
                        <label for="email" class="label">EMAIL: </label>
                        <input placeholder="email-id" class="input" id="email"  name="email" required>
                        <br>
                        <label for="password" class="label">PASSWORD: </label>
                        <input placeholder="enter the Password" type="password" class="input"  name="password" required>
                        <div class="btn">
                            <a href="#"><button>Sign-Up</button> </a>
                            <!-- <a href="/log"><button>LOGIN</button> </a> -->
                        </div>
                        <div>
                            <span class="span">
                                or
                            </span>
                        </div>

                    </div>
                    <div class="facebook">
                        <a href="#"><button type="button">FACEBOOK</button></a>
                    </div>

                </form>
            </div>
        </div>
    </div>
   
      
        