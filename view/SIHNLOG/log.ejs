<% layout("/INCLUDE/boilerplate")%>
<style>
    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    /* Desktop Styles */
    @media screen and (min-width: 900px) {
        body {
            background-color: rgb(171, 161, 161);
        }

        .body {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 70%;
            margin: 2rem auto;
            padding: 1rem;
            border: 2px solid white;
            border-radius: 2rem;
            background-color: rgb(171, 161, 161);
            gap: 2rem;
        }

        .log-body img {
            width: 100%;
            max-width: 30rem;
            height: 35rem;
            border-radius: 2rem;
        }

        #log-data {
            width: 100%;
            max-width: 30rem;
            padding: 2rem;
            border: 2px solid black;
            border-radius: 2rem;
            background-color: white;
        }

        .log-data {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .label {
            font-size: 1.3rem;
        }

        .input {
            font-size: 1.1rem;
            padding: 0.5rem 1rem;
            background-color: white;
            color: black;
            border-radius: 1rem;
            width: 100%;
            border: 1px solid gray;
        }

        .btn {
            text-align: center;
        }

        .btn button {
            font-size: 1.4rem;
            background-color: aqua;
            color: white;
            border-radius: 1rem;
            padding: 0.5rem 2rem;
            border: none;
            cursor: pointer;
        }

        .span {
            font-size: 1.5rem;
            text-align: center;
            display: block;
        }

        .facebook {
            text-align: center;
        }

        .facebook button {
            background-color: blue;
            color: white;
            font-size: 1.2rem;
            padding: 0.5rem 2rem;
            border-radius: 1rem;
            border: none;
            cursor: pointer;
        }
    }

    /* Mobile Styles */
    @media screen and (max-width: 600px) {
        body {
            background-color: rgb(194, 202, 191);
        }

        .body {
            display: flex;
            flex-direction: column;
            border: 2px solid black;
            max-width: 28rem;
            margin: 2rem auto;
            border-radius: 1rem;
            background-color: white;
        }

        .log-body img {
            width: 90%;
            height: auto;
            margin: 1rem auto;
            display: block;
            border-radius: 1rem;
        }

        #log-data {
            margin: 1rem auto;
            padding: 1rem;
            width: 90%;
            border: 1px solid black;
            border-radius: 1rem;
            background-color: white;
        }

        .log-data {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .label {
            font-size: 1.2rem;
        }

        .input {
            width: 100%;
            padding: 0.4rem;
            font-size: 1rem;
            border-radius: 0.5rem;
            border: 1px solid gray;
        }

        .btn {
            text-align: center;
        }

        .btn button {
            width: 6rem;
            height: 2rem;
            background-color: black;
            color: white;
            cursor: pointer;
            border-radius: 1rem;
            border: none;
        }

        .span {
            font-size: 1.3rem;
            text-align: center;
        }

        .facebook {
            text-align: center;
        }

        .facebook button {
            background-color: blue;
            color: white;
            font-size: 1.1rem;
            padding: 0.4rem 1rem;
            border-radius: 0.8rem;
            border: none;
            cursor: pointer;
        }
    }
</style>

<body>
    <div class="body">
        <div class="log-body">
            <img src="novel.jpg" alt="Login Illustration">
        </div>

        <div id="log-data">
            <form action="/login" method="POST">
                <div class="log-data">
                    <label for="username" class="label">USERNAME:</label>
                    <input type="text" name="username" placeholder="username" class="input" required>

                    <label for="password" class="label">PASSWORD:</label>
                    <input type="password" name="password" placeholder="enter the Password" class="input" required>

                    <div class="btn">
                        <button type="submit">LOGIN</button>
                    </div>

                    
                </div>
            </form>
        </div>
    </div>
</body>
